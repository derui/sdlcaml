.PHONY: gen-library

#
# This project requires ocamlfind (default - false).
#
USE_OCAMLFIND = true
#
OCAMLPACKS[] =
	core
	ctypes
	ctypes.foreign
	xml-light

#
if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

#
# Include path
#
OCAMLINCLUDES +=

#
# Compile native or byte code?
#
# The default values are defined as follows:
#
NATIVE_ENABLED = $(OCAMLOPT_EXISTS)
BYTE_ENABLED = true

#
# Various options
#
OCAMLFLAGS    += -thread -g
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS +=
OCAML_LINK_FLAGS += -linkall
# OCAML_BYTE_LINK_FLAGS +=
# OCAML_NATIVE_LINK_FLAGS +=

################################################
# Generated files
#
# Workaround for the fact that ocamldep does not pay attention to .mll
# and .mly files.
#
# OCamlGeneratedFiles(parser.ml lexer.ml)

################################################
# Build bindings for OCaml to C.
#
.STATIC:
	USE_GL_VERSION = 0_0
	if $(defined GL_VERSION)
		USE_GL_VERSION = $(GL_VERSION)
		export
	GL_MAJOR_VERSION = $(int $(match $(USE_GL_VERSION), \\\([0-9]+\\\)_\\\([0-9]+\\\), $1))
	GL_MINOR_VERSION = $(int $(match $(USE_GL_VERSION), \\\([0-9]+\\\)_\\\([0-9]+\\\), $2))

OCamlProgram(gen_enums, gen_enums util)
OCamlProgram(gen_commands, gen_commands util)

section:
	private.PROGRAM = gen_enums$(EXE)
	private.LIB = gl_enums
	private.OUTPUT = $(LIB).ml

	$(file $(OUTPUT)): $(PROGRAM) gl.xml
		./$< gl.xml -major $(GL_MAJOR_VERSION) -minor $(GL_MINOR_VERSION) > $@

	export

section:
	private.PROGRAM = gen_commands$(EXE)
	private.LIB = gl_commands
	private.OUTPUT = $(LIB).ml

	$(file $(OUTPUT)): $(PROGRAM) gl.xml
		./$< gl.xml -major $(GL_MAJOR_VERSION) -minor $(GL_MINOR_VERSION) > $@

	export

section:
	private.FILES = gl_commands gl_enums gl_types
	MyOCamlPackage(sdlcaml_gl_bindings, $(FILES), $(EMPTY), $(EMPTY), false)

	gen-library: $(OCamlPackageGeneratedFiles sdlcaml_gl_bindings, false)
	export

#
# OCAML_LIBS += -custom
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS += camlidl
# OCAML_LIB_FLAGS += -cclib -lsdlcaml
#

gen: gen-library

.DEFAULT: gen

