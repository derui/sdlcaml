# Generated files
#
# Workaround for the fact that ocamldep does not pay attention to .mll
# and .mly files.
#
# OCamlGeneratedFiles(parser.ml lexer.ml)

################################################
# Build bindings for OCaml to C.
#

# check that can sdl-config use.
.STATIC:
	SDL_CONFIG_FOUND = $(CheckProg sdl-config)
	SDL_CONFIG = $(if $(SDL_CONFIG_FOUND), sdl-config, "")

	if $(not $(SDL_CONFIG_FOUND))
		eprintln(can not build because sdl-config is not found. Please check to valid SDL installed)
		$(exit 1)
	SDL_CONFIGURE = $(shell $(SDL_CONFIG) --libs --cflags)
	SDL_MIXER_AVAILABLE = $(VerboseCheckCLib SDL_mixer, Mix_Init)
	SDL_IMAGE_AVALIABLE = $(VerboseCheckCLib SDL_image, IMG_Init)
	SDL_TTF_AVALIABLE = $(VerboseCheckCLib SDL_ttf, TTF_Init)

	if $(SDL_MIXER_AVAILABLE)
		SDL_CONFIGURE += -lSDL_mixer -DSDLCAML_MIXER_ENABLE
		setenv("SDLCAML_MIXER_ENABLE", $(EMPTY))
		export
	if $(SDL_IMAGE_AVALIABLE)
		SDL_CONFIGURE += -lSDL_image -DSDLCAML_IMAGE_ENABLE
		setenv("SDLCAML_IMAGE_ENABLE", $(EMPTY))
		export
	if $(SDL_TTF_AVALIABLE)
		SDL_CONFIGURE += -lSDL_ttf -DSDLCAML_TTF_ENABLE
		setenv("SDLCAML_TTF_ENABLE", $(EMPTY))
		export
	export

%$(EXT_OBJ): %.c :scanner: scan-c-%.c
	$(OCamlC) -ccopt "-std=c99 $(SDL_CONFIGURE)" -o $@ -c $<

CFILES = $(removesuffix $(ls *.c))

FILES = $(removesuffix $(ls *.ml))
FILES += enums

# files for building extend libraries are contained to dependencies.
SUB_FILES = $(ls *.inc)

LIBRARY_NAME = sdlcaml
#
STATICLIBS = $(add-wrapper lib, $(EXT_LIB), $(CFILES))

#
# OCAML_LIBS += ../lib/extlib -custom
# OCAML_CLIBS +=
# OCAML_OTHER_LIBS += camlidl
# OCAML_LIB_FLAGS += -cclib -lsdlcaml
#
MyOCamlPackage($(LIBRARY_NAME), $(FILES), $(CFILES),-linkall, true)

# As gl_enum.h is referenced by already existed .c file,
# need to add generated files by camlidl to adependency for .DEFAULT.
all: sdlcaml.cmxa $(RequireBuild enums.ml) $(RequireBuild extlib.cmxa) $(SUB_FILES)

.DEFAULT: all
